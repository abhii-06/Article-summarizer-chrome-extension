{
  "manifest_version": 3,
  "name": "AI Summary for Articles",
  "version": "1.5",
  "description": "Summarize any webpage or PDF instantly using Gemini AI with speech and history.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tts",
    "tabs",
    "downloads"
  ],
  "host_permissions": ["<all_urls>", "file://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
